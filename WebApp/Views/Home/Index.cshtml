@using PhoneBookEntitiesLib
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Телефонные книжки";
}

<div style="align-content:center;">
    <table border="1" cellspacing="2" cellpadding="5" bordercolor="Black">
        <tr bgcolor="Black" class="HeaderText">
            <th class="thId" align="center">№</th>
            <th align="center">Владелец</th>
            <th align="center">Действие</th>
        </tr>
        @foreach (PhoneBook phoneBook in ViewBag.PhoneBooks)
        {
            <tr class="EvenString">
                <td align="center">
                    @phoneBook.PhoneBookID
                </td>
                <td>@phoneBook.OwnerPhoneBook</td>
                <td align="center">
                    <a asp-controller="Home" asp-action="SomePhoneBook" asp-route-id="@phoneBook.PhoneBookID">
                        <input class="button" type="button" value="Посмотреть" />
                    </a>
                </td>
            </tr>
        }
    </table>
    <br />
    @if (SignInManager.IsSignedIn(User))
    {
        <a href="/Home/AddPhoneBook">
            <input class="button" type="button" value="Добавить новую" />
        </a>
    }
</div>



